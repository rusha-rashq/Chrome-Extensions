{
    "manifest_version": 2,
    "name": "Blue Background",
    "description": "This extension changes the background color to blue.",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
